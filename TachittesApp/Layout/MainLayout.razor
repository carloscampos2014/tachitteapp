@inherits LayoutComponentBase
@inject CartService CartService
@inject NavigationManager NavigationManager

<div class="bg-red-50 min-h-screen flex flex-col">
    <header class="header-bg text-white p-4 shadow-lg sticky top-0 z-50">
        <div class="container mx-auto flex justify-between items-center">
            <button class="bg-transparent border-none p-0" @onclick="NavigateToHome">
                <h1 class="text-3xl font-bold text-white text-tachitte hover:underline cursor-pointer">Tachitte</h1>
            </button>
            <div class="relative" @onmouseover="ShowCart" @onmouseout="HideCart">
                <button id="cart-button"
                        class="p-2 relative rounded-full hover:bg-red-600 transition-colors"
                        @onclick="ToggleStickyCart">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                         stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                         class="lucide lucide-shopping-cart">
                        <circle cx="8" cy="21" r="1" />
                        <circle cx="19" cy="21" r="1" />
                        <path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57l1.65-7.43H5.12" />
                    </svg>
                    <span id="cart-count"
                          class="absolute top-0 right-0 inline-flex items-center justify-center px-2 py-1 text-xs font-bold leading-none text-red-600 transform translate-x-1/2 -translate-y-1/2 bg-white rounded-full">@CartService.Items.Count</span>
                </button>
                @if (isCartVisible)
                {
                    <CartPopup OnClose="CloseStickyCart" />
                }
            </div>
        </div>
    </header>

    <main class="flex-grow container mx-auto p-4 md:p-8">
        @Body
    </main>

    <div class="text-center text-xs text-red-400 mt-8 mb-4 px-4">
        Este site, incluindo todos os produtos e o restaurante Tachitte, é fictício e foi criado apenas para fins de
        demonstração.
    </div>
</div>

@code {
    private bool isCartVisible;
    private bool isCartSticky = false;

    protected override void OnInitialized()
    {
        CartService.OnChange += StateHasChanged;
    }

    private void ToggleStickyCart()
    {
        isCartSticky = !isCartSticky;
        isCartVisible = isCartSticky;
    }

    private void CloseStickyCart()
    {
        isCartSticky = false;
        isCartVisible = false;
    }

    private void ShowCart()
    {
        if (!isCartSticky)
        {
            isCartVisible = true;
        }
    }

    private void HideCart()
    {
        if (!isCartSticky)
        {
            isCartVisible = false;
        }
    }

    private void NavigateToHome()
    {
        NavigationManager.NavigateTo(NavigationManager.BaseUri);
    }

    public void Dispose()
    {
        CartService.OnChange -= StateHasChanged;
    }
}