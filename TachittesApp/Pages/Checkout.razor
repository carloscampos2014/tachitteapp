@page "/checkout"
@using System.Net.Http
@using Microsoft.AspNetCore.Components.Routing
@using TachittesApp.Services
@using TachittesApp.Models
@inject CartService CartService
@inject NavigationManager NavigationManager
@inject HttpClient Http

<div class="container mx-auto p-4 md:p-8">
    <div class="bg-white p-4 rounded-lg shadow-md mb-6">
        <div class="flex justify-between items-center mb-4">
            <a href="/" class="no-underline">
                <h2 class="text-2xl font-bold text-red-600 hover:underline cursor-pointer">Finalizar Compra</h2>
            </a>
            <button @onclick="NavigateToHome" class="bg-red-500 text-white py-2 px-4 rounded-lg font-bold hover:bg-red-600 transition-colors">
                Voltar ao Menu
            </button>
        </div>

        @if (CartService.Items.Any())
        {
            <div class="mt-4">
                <h3 class="text-xl font-bold text-red-600 mb-4">Resumo do Pedido</h3>
                <ul class="divide-y divide-gray-200">
                    @foreach (var item in CartService.Items)
                    {
                        <li class="py-2 flex justify-between items-center">
                            <div class="flex items-center space-x-2">
                                <img src="@($"img/{item.Item.Image}")" alt="@item.Item.Name" class="w-12 h-12 object-cover rounded-md" />
                                <div>
                                    <span class="font-semibold text-red-800">@item.Item.Name (@item.Quantity)</span>
                                    @if (item.Customizations.Any())
                                    {
                                        <p class="text-sm text-red-800">
                                            @string.Join(", ", item.Customizations.Select(c => c.Name))
                                        </p>
                                    }
                                </div>
                            </div>
                            <span class="text-red-600 font-bold">@item.TotalPrice.ToString("C")</span>
                        </li>
                    }
                </ul>
            </div>
        }
        else
        {
            <p class="text-red-600 text-center">Seu carrinho está vazio. Adicione itens para continuar.</p>
        }
    </div>
</div>

@code {
    private MenuData? menuData;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            menuData = await Http.GetFromJsonAsync<MenuData>("data/dados.json");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao carregar os dados de configuração: {ex.Message}");
        }
    }

    private void NavigateToHome()
    {
        NavigationManager.NavigateTo(NavigationManager.BaseUri);
    }
}